---
import { supabase, type Category, type Program, type Resource } from '@lib/supabase';
import { getTranslations, type Language } from '@lib/i18n';
import { slugify } from '@lib/utils';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);

// Fetch categories, resources, and programs for footer
let resourceCategories: Category[] = [];
let programCategories: Category[] = [];
let latestResources: Resource[] = [];
let latestPrograms: Program[] = [];
let uniqueAudiences: string[] = [];

try {
  const { data: resourceCategoriesData, error: resourceCategoriesError } = await supabase
    .from('categories')
    .select('id, slug, name_en, name_fi, name_sv, type, sort_order')
    .eq('type', 'resource')
    .order('sort_order', { ascending: true });

  if (resourceCategoriesError) {
    console.error('Error fetching footer resource categories:', resourceCategoriesError);
  } else {
    resourceCategories = resourceCategoriesData || [];
  }

  const { data: programCategoriesData, error: programCategoriesError } = await supabase
    .from('categories')
    .select('id, slug, name_en, name_fi, name_sv, type, sort_order')
    .eq('type', 'program')
    .order('sort_order', { ascending: true });

  if (programCategoriesError) {
    console.error('Error fetching footer program categories:', programCategoriesError);
  } else {
    programCategories = programCategoriesData || [];
  }

  // Fetch latest resources with selective fields (only title and slug needed for footer)
  const { data: resources, error: resourcesError } = await supabase
    .from('resources')
    .select('id, slug, title')
    .eq('language', lang)
    .eq('is_published', true)
    .order('published_at', { ascending: false })
    .limit(5);

  if (resourcesError) {
    console.error('Error fetching footer resources:', resourcesError);
  } else {
    latestResources = (resources || []) as Resource[];
  }

  // Fetch latest programs with selective fields (only title and slug needed for footer)
  const { data: programs, error: programsError } = await supabase
    .from('programs')
    .select('id, slug, title')
    .eq('language', lang)
    .eq('is_published', true)
    .order('published_at', { ascending: false })
    .limit(5);

  if (programsError) {
    console.error('Error fetching footer programs:', programsError);
  } else {
    latestPrograms = programs || [];
  }

  // Fetch unique audiences from programs
  const { data: allProgramsForAudiences, error: audiencesError } = await supabase
    .from('programs')
    .select('audience')
    .eq('language', lang)
    .eq('is_published', true);

  if (audiencesError) {
    console.error('Error fetching footer audiences:', audiencesError);
  } else {
    const audiences = new Set<string>();
    allProgramsForAudiences?.forEach((program) => {
      if (program.audience && program.audience.trim()) {
        audiences.add(program.audience.trim());
      }
    });
    uniqueAudiences = Array.from(audiences).sort();
  }
} catch (error) {
  console.error('Error fetching footer content:', error);
}
