---
import { getTranslations, type Language } from '@lib/i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<form
  id="start-form"
  class="space-y-6"
  data-testid="start-form"
>
  <div>
    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
      {t.forms.start.name}
    </label>
    <input
      type="text"
      id="name"
      name="name"
      required
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
    />
  </div>

  <div>
    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
      {t.forms.start.email}
    </label>
    <input
      type="email"
      id="email"
      name="email"
      required
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
    />
  </div>

  <div>
    <label for="organization" class="block text-sm font-medium text-gray-700 mb-2">
      {t.forms.start.organization}
    </label>
    <input
      type="text"
      id="organization"
      name="organization"
      required
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
    />
  </div>

  <div>
    <label for="needs" class="block text-sm font-medium text-gray-700 mb-2">
      {t.forms.start.needs}
    </label>
    <textarea
      id="needs"
      name="needs"
      rows="6"
      required
      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
    ></textarea>
  </div>

  <p class="text-sm text-gray-600">
    {t.forms.start.privacy}
  </p>

  <button
    type="submit"
    class="btn btn-primary w-full"
  >
    {t.forms.start.submit}
  </button>

  <div id="form-message" class="hidden text-center"></div>
</form>

<script>
  const form = document.getElementById('start-form') as HTMLFormElement;
  const messageDiv = document.getElementById('form-message') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const data = {
      type: 'start',
      name: formData.get('name'),
      email: formData.get('email'),
      organization: formData.get('organization'),
      needs: formData.get('needs'),
    };

    try {
      const response = await fetch('/api/form', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        messageDiv.className = 'block text-green-600 font-semibold';
        messageDiv.textContent = 'Thank you! We\'ll contact you soon.';
        form.reset();
      } else {
        throw new Error('Form submission failed');
      }
    } catch (error) {
      messageDiv.className = 'block text-red-600 font-semibold';
      messageDiv.textContent = 'An error occurred';
    }
  });
</script>

