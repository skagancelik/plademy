---
import { getTranslations, type Language } from '@lib/i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="relative bg-[#2841CF] text-white pt-32 pb-16 md:pt-16 md:min-h-screen md:flex md:items-center overflow-hidden">
  <!-- Animated Gradient Background (hidden on mobile) -->
  <div class="hidden md:block absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-1/2 -left-1/2 w-[150%] h-[150%] bg-gradient-to-br from-red-500/55 via-blue-500/55 to-orange-500/55 rounded-full blur-3xl animate-gradient-1"></div>
    <div class="absolute -bottom-1/2 -right-1/2 w-[150%] h-[150%] bg-gradient-to-tl from-orange-500/55 via-red-500/55 to-blue-500/55 rounded-full blur-3xl animate-gradient-2"></div>
    <div class="absolute top-1/2 left-1/2 w-[150%] h-[150%] bg-gradient-to-r from-blue-500/50 via-orange-500/50 to-red-500/50 rounded-full blur-3xl animate-gradient-3"></div>
  </div>
  
  <div class="container w-full relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Left Side - Text Content -->
      <div class="text-center md:text-left">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-white leading-tight">
          {t.home.hero.title}
        </h1>
        <p class="text-xl md:text-xl mb-8 text-white/90 max-w-lg mx-auto md:mx-0">
          {t.home.hero.subtitle}
        </p>
              <div class="flex gap-4 justify-center md:justify-start flex-wrap">
                <a href="/start" class="px-12 py-4 rounded-full font-semibold text-lg transition-all duration-200 bg-white text-[#2841CF] hover:bg-black hover:text-white flex items-center justify-center">
                  {t.nav.start}
                </a>
          <a href="/programs/" class="px-12 py-4 rounded-full font-semibold text-lg border-2 border-white text-white hover:bg-black hover:text-white hover:border-black transition-all duration-200 flex items-center justify-center">
            {t.nav.programs}
          </a>
        </div>
      </div>
      
      <!-- Right Side - Dashboard Image -->
      <div>
        <img 
          src="/dashboard.png" 
          alt="Plademy Dashboard" 
          class="w-full h-auto"
          loading="eager"
          width="1200"
          height="800"
          decoding="async"
          fetchpriority="high"
        />
      </div>
    </div>
  </div>
</section>

