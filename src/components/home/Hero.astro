---
import { getTranslations, type Language } from '@lib/i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="bg-[#2841CF] text-white py-16 md:py-24 overflow-hidden">
  <div class="container">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Left Side - Text Content -->
      <div class="text-center md:text-left">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-white leading-tight">
          {t.home.hero.title}
        </h1>
        <p class="text-lg md:text-xl mb-8 text-white/90 max-w-lg mx-auto md:mx-0">
          {t.home.hero.subtitle}
        </p>
              <div class="flex gap-4 justify-center md:justify-start flex-wrap">
                <a href="/start" class="px-[44px] py-3 rounded-full font-semibold transition-all duration-200 bg-white text-[#2841CF] hover:opacity-90 flex items-center justify-center">
                  {t.nav.start}
                </a>
          <a href="/programs/" class="btn bg-transparent border-2 border-white text-white hover:bg-white/10">
            {t.nav.programs}
          </a>
        </div>
      </div>
      
      <!-- Right Side - Dashboard Image -->
      <div>
        <img 
          src="/dashboard.png" 
          alt="Plademy Dashboard" 
          class="w-full h-auto"
          loading="eager"
          width="1200"
          height="800"
          decoding="async"
          fetchpriority="high"
        />
      </div>
    </div>
  </div>
</section>

