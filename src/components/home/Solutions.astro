---
import { getTranslations, type Language } from '@lib/i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="pt-[94px] pb-16 bg-white">
  <div class="container">
    <div class="text-center mb-[78px]">
      <h2 class="text-4xl font-bold mb-4">{t.solutions.title || 'Solutions'}</h2>
      <p class="text-xl text-gray-600">{t.solutions.description || 'Discover our comprehensive solutions for your organization.'}</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Mentorship Center -->
      <a href="https://mentorship.center" target="_blank" rel="noopener noreferrer" class="card text-center hover:shadow-lg transition-shadow block rounded-[30px]">
        <div class="mt-[15px] mb-[36px] flex justify-center">
          <img 
            src="/mentorship.center logo.svg" 
            alt="Mentorship Center" 
            class="h-12 object-contain"
          />
        </div>
        <h3 class="text-xl font-bold mb-1">{t.solutions.mentorshipCenter.title}</h3>
        <p class="text-black mb-4">
          {t.solutions.mentorshipCenter.shortDescription || t.solutions.mentorshipCenter.description}
        </p>
      </a>

      <!-- Membership Center -->
      <a href="https://membership.center" target="_blank" rel="noopener noreferrer" class="card text-center hover:shadow-lg transition-shadow block rounded-[30px]">
        <div class="mt-[15px] mb-[36px] flex justify-center">
          <img 
            src="/membership-center-logo.svg" 
            alt="Membership Center" 
            class="h-12 object-contain"
          />
        </div>
        <h3 class="text-xl font-bold mb-1">{t.solutions.membershipCenter.title}</h3>
        <p class="text-black mb-4">
          {t.solutions.membershipCenter.shortDescription || t.solutions.membershipCenter.description}
        </p>
      </a>

      <!-- ERG Center -->
      <a href="https://erg.center" target="_blank" rel="noopener noreferrer" class="card text-center hover:shadow-lg transition-shadow block rounded-[30px]">
        <div class="mt-[15px] mb-[36px] flex justify-center">
          <img 
            src="/erg-center-logo.svg" 
            alt="ERG Center" 
            class="h-12 object-contain"
          />
        </div>
        <h3 class="text-xl font-bold mb-1">{t.solutions.ergCenter.title}</h3>
        <p class="text-black mb-4">
          {t.solutions.ergCenter.shortDescription || t.solutions.ergCenter.description}
        </p>
      </a>

      <!-- Secured Integrations -->
      <a href="https://securedintegration.com" target="_blank" rel="noopener noreferrer" class="card text-center hover:shadow-lg transition-shadow block rounded-[30px]">
        <div class="mt-[15px] mb-[36px] flex justify-center">
          <img 
            src="/secured-integration-logo.svg" 
            alt="Secured Integrations" 
            class="h-12 object-contain"
          />
        </div>
        <h3 class="text-xl font-bold mb-1">{t.solutions.securedIntegrations.title}</h3>
        <p class="text-black mb-4">
          {t.solutions.securedIntegrations.shortDescription || t.solutions.securedIntegrations.description}
        </p>
      </a>
    </div>
  </div>
</section>



