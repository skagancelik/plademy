---
import { getTranslations, type Language } from '@lib/i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="py-16 bg-[#F6F7FB]">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4">{t.home.features.title}</h2>
      <p class="text-xl text-gray-600">{t.home.features.subtitle}</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <div class="card text-center">
        <h3 class="text-2xl font-bold mb-4">{t.home.features.engagement.title}</h3>
        <p class="text-black">
          {t.home.features.engagement.description}
        </p>
      </div>

      <div class="card text-center">
        <h3 class="text-2xl font-bold mb-4">{t.home.features.mentoring.title}</h3>
        <p class="text-black">
          {t.home.features.mentoring.description}
        </p>
      </div>

      <div class="card text-center">
        <h3 class="text-2xl font-bold mb-4">{t.home.features.diversity.title}</h3>
        <p class="text-black">
          {t.home.features.diversity.description}
        </p>
      </div>
    </div>
  </div>
</section>

