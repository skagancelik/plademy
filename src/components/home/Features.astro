---
import { getTranslations, type Language } from '@lib/i18n';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
---

<section class="py-16 bg-gray-50">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4">{t.home.features.title}</h2>
      <p class="text-xl text-gray-600">{t.home.features.subtitle}</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <div class="card text-center">
        <h3 class="text-2xl font-bold mb-4">Employee Engagement</h3>
        <p class="text-gray-600">
          Boost engagement with personalized programs and measurable results!
        </p>
      </div>

      <div class="card text-center">
        <h3 class="text-2xl font-bold mb-4">Mentoring & Coaching</h3>
        <p class="text-gray-600">
          Facilitate impactful mentoring and coaching with AI-driven matching!
        </p>
      </div>

      <div class="card text-center">
        <h3 class="text-2xl font-bold mb-4">Diversity & Inclusion</h3>
        <p class="text-gray-600">
          Promote inclusion with tailored learning and development initiatives!
        </p>
      </div>
    </div>
  </div>
</section>

