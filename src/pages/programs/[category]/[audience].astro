---
import PageLayout from '@layouts/PageLayout.astro';
import ProgramCard from '@components/programs/ProgramCard.astro';
import { supabase, type Program, type Category } from '@lib/supabase';
import { getTranslations, type Language, getLanguageFromCookie } from '@lib/i18n';
import { slugify } from '@lib/utils';

export const prerender = false; // Edge SSR

// Set cache headers for Edge SSR (list pages: 5 min)
Astro.response.headers.set(
  'Cache-Control',
  'public, max-age=300, stale-while-revalidate=600'
);

const lang = getLanguageFromCookie(Astro.cookies, Astro.url) || 'en';
const t = getTranslations(lang);

// Get category and audience from URL path
// CRITICAL: Trim whitespace to ensure exact matching
const categorySlug = (Astro.params.category || '').trim();
const audienceSlug = (Astro.params.audience || '').trim();

// Handle "all" cases FIRST - before any other processing
// CRITICAL: Explicitly check for "all-categories" string or empty string
// This must be checked BEFORE program slug detection to avoid false matches
const isAllCategories = 
  categorySlug === 'all-categories' || 
  categorySlug === '' || 
  categorySlug === undefined ||
  categorySlug === null ||
  !categorySlug;
const isAllAudiences = 
  audienceSlug === 'all-audiences' || 
  audienceSlug === '' || 
  audienceSlug === undefined ||
  audienceSlug === null ||
  !audienceSlug;

// CRITICAL: Check if this is actually a program slug (not a category/audience filter)
// Only check if NOT "all-categories" to avoid false matches
// If categorySlug looks like a program slug (long, multiple dashes), it might be a program slug
if (!isAllCategories && categorySlug && categorySlug.length > 15 && categorySlug.split('-').length > 3 && audienceSlug === 'all-audiences') {
  // This might be a program slug - check
  const { data: programData } = await supabase
    .from('programs')
    .select('id, slug')
    .eq('slug', categorySlug)
    .eq('is_published', true)
    .maybeSingle();
  
  if (programData?.id) {
    // This is a program slug - redirect to correct route
    return Astro.redirect(`/programs/${categorySlug}`, 301);
  }
}

let programs: Program[] = [];
let categories: Category[] = [];
let uniqueAudiences: string[] = [];
let categoryMap: Map<string, Category> = new Map();
let totalCount = 0;
let hasMore = false;
let selectedCategory: Category | null = null;
let selectedAudience: string | null = null;

// Get goal filter from query parameter (search functionality)
const goalFilter = Astro.url.searchParams.get('goal') || '';

// Get page from URL query parameter for pagination
const page = parseInt(Astro.url.searchParams.get('page') || '1', 10);
const pageSize = 18; // Keep 18 for grid layout (3 columns x 6 rows)
const offset = (page - 1) * pageSize;

try {
  // Get all categories
  const { data: categoriesData } = await supabase
    .from('categories')
    .select('id, slug, name_en, name_fi, name_sv, type, sort_order')
    .eq('type', 'program')
    .order('sort_order', { ascending: true });

  categories = categoriesData || [];

  // Create category map
  // CRITICAL: Only map by id and slug, NOT by name_en to avoid false matches
  // categorySlug should match category.slug, not category.name_en
  categories.forEach((cat) => {
    categoryMap.set(cat.id, cat);
    categoryMap.set(cat.slug, cat);
    // DO NOT map by name_en - this can cause false matches if categorySlug accidentally matches a category name
  });

  // Find selected category if not "all"
  // CRITICAL: Only set selectedCategory if NOT "all-categories"
  // This is the most critical check - if isAllCategories is true, selectedCategory MUST be null
  // DO NOT try to find category if isAllCategories is true - this prevents false matches
  if (isAllCategories === true) {
    // Explicitly set to null if "all-categories" - this is the most important check
    // DO NOT try to find category if isAllCategories is true
    // DO NOT do any category lookup if isAllCategories is true
    selectedCategory = null;
  } else if (categorySlug && categorySlug !== 'all-categories' && categorySlug !== '' && !isAllCategories) {
    // Only try to find category if:
    // 1. We have a valid categorySlug
    // 2. categorySlug is not "all-categories"
    // 3. categorySlug is not empty
    // 4. isAllCategories is false (double-check)
    // First try to find by slug in categoryMap
    selectedCategory = categoryMap.get(categorySlug) || null;
    // If not found by slug, try to find by slugified name (fallback)
    // This is a fallback for edge cases where slug might not match exactly
    // BUT: Only do this if isAllCategories is still false
    if (!selectedCategory && !isAllCategories) {
      for (const cat of categories) {
        const slugifiedNameEn = slugify(cat.name_en);
        const slugifiedNameFi = cat.name_fi ? slugify(cat.name_fi) : '';
        const slugifiedNameSv = cat.name_sv ? slugify(cat.name_sv) : '';
        if (slugifiedNameEn === categorySlug || 
            slugifiedNameFi === categorySlug || 
            slugifiedNameSv === categorySlug) {
          selectedCategory = cat;
          break;
        }
      }
    }
  } else {
    // Explicitly set to null if categorySlug is empty or "all-categories" or isAllCategories is true
    selectedCategory = null;
  }

  // Get all unique audiences from programs (optimized: only distinct values)
  // Note: Supabase doesn't support DISTINCT on single column easily, so we fetch minimal data
  const { data: allPrograms } = await supabase
    .from('programs')
    .select('audience')
    .eq('language', lang)
    .eq('is_published', true)
    .not('audience', 'is', null); // Only get programs with audience

  const audiences = new Set<string>();
  allPrograms?.forEach((program) => {
    if (program.audience && program.audience.trim()) {
      audiences.add(program.audience.trim());
    }
  });
  uniqueAudiences = Array.from(audiences).sort();

  // Find selected audience if not "all"
  if (!isAllAudiences && audienceSlug) {
    const normalizedAudienceSlug = audienceSlug.replace(/-/g, ' ');
    selectedAudience = uniqueAudiences.find(aud => 
      slugify(aud) === audienceSlug || 
      aud.toLowerCase().replace(/\s+/g, '-') === audienceSlug
    ) || null;
  }

  // Build query for fetching programs (without count - we do that separately)
  // CRITICAL: Only apply category filter if NOT "all-categories" AND selectedCategory is set
  // FINAL SAFETY CHECK: Force selectedCategory to null if isAllCategories is true (defensive programming)
  if (isAllCategories === true) {
    selectedCategory = null; // Force null one more time before building query
  }
  
  let programsQuery = supabase
    .from('programs')
    .select('id, slug, title, excerpt, cover_image_url, category, published_at, goal, duration, audience')
    .eq('language', lang)
    .eq('is_published', true);

  // Apply category filter ONLY if we have a valid selected category
  // CRITICAL: Check isAllCategories FIRST - if true, NEVER apply category filter
  // This ensures all programs are shown when "all-categories" is selected
  
  // FINAL CHECK: If isAllCategories is true, NEVER apply category filter (even if selectedCategory is somehow set)
  // ULTRA-SAFE: Multiple checks to ensure category filter is NOT applied when isAllCategories is true
  if (isAllCategories === true) {
    // Explicitly do nothing - no category filter applied
    // This shows all programs from all categories
    // DO NOT apply any category filter, even if selectedCategory is somehow set
  } else {
    // Only apply category filter if:
    // 1. isAllCategories is false (checked above)
    // 2. selectedCategory is not null
    // 3. selectedCategory is truthy
    if (selectedCategory !== null && selectedCategory) {
      const categoryName = selectedCategory[`name_${lang}` as keyof Category] || selectedCategory.name_en;
      if (categoryName) {
        programsQuery = programsQuery.eq('category', categoryName);
      }
    }
  }
  // If isAllCategories is true OR selectedCategory is null, NO category filter is applied (shows all categories)

  // Apply audience filter
  if (!isAllAudiences && selectedAudience) {
    programsQuery = programsQuery.eq('audience', selectedAudience);
  }

  // Apply goal filter (already retrieved from query params above)
  if (goalFilter) {
    programsQuery = programsQuery.ilike('goal', `%${goalFilter}%`);
  }

  // Get total count with same filters (separate optimized query)
  // FINAL SAFETY CHECK: Force selectedCategory to null if isAllCategories is true (defensive programming)
  if (isAllCategories === true) {
    selectedCategory = null; // Force null one more time before building count query
  }
  
  let countQuery = supabase
    .from('programs')
    .select('id', { count: 'exact', head: true })
    .eq('language', lang)
    .eq('is_published', true);

  // Apply category filter to count query ONLY if category is selected (same logic as programsQuery)
  // CRITICAL: Check isAllCategories FIRST - if true, NEVER apply category filter
  if (isAllCategories === true) {
    // Explicitly do nothing - no category filter applied
    // This counts all programs from all categories
  } else if (selectedCategory !== null && selectedCategory) {
    // Only apply filter if we have a selected category AND isAllCategories is false
    const categoryName = selectedCategory[`name_${lang}` as keyof Category] || selectedCategory.name_en;
    if (categoryName) {
      countQuery = countQuery.eq('category', categoryName);
    }
  }

  if (!isAllAudiences && selectedAudience) {
    countQuery = countQuery.eq('audience', selectedAudience);
  }

  if (goalFilter) {
    countQuery = countQuery.ilike('goal', `%${goalFilter}%`);
  }

  const { count } = await countQuery;
  totalCount = count || 0;

  // Fetch programs with pagination
  // Order by published_at descending (newest first)
  const { data: programsData, error: programsError } = await programsQuery
    .order('published_at', { ascending: false })
    .range(offset, offset + pageSize - 1);

  programs = programsData || [];
  hasMore = offset + pageSize < totalCount;
} catch (error) {
  console.error('Error fetching programs:', error);
}

// If category or audience not found and not "all", return 404
if (!isAllCategories && categorySlug && !selectedCategory) {
  return new Response(null, { status: 404 });
}
if (!isAllAudiences && audienceSlug && !selectedAudience) {
  return new Response(null, { status: 404 });
}

// Build pagination URLs
const buildPaginationURL = (pageNum: number): string => {
  const params = new URLSearchParams();
  if (goalFilter) params.set('goal', goalFilter);
  params.set('page', String(pageNum));
  return `/programs/${categorySlug}/${audienceSlug}?${params.toString()}`;
};

const prevPageURL = page > 1 ? buildPaginationURL(page - 1) : '';
const nextPageURL = hasMore ? buildPaginationURL(page + 1) : '';

// Build dynamic title and description for SEO
let pageTitle = t.programs.title;
let pageDescription = t.programs.description;

if (!isAllCategories && selectedCategory && !isAllAudiences && selectedAudience) {
  // Both category and audience selected: "Networking Program for Community Members"
  const categoryName = selectedCategory[`name_${lang}` as keyof Category] || selectedCategory.name_en;
  pageTitle = `${categoryName} for ${selectedAudience}`;
  pageDescription = `Discover ${categoryName.toLowerCase()} programs designed for ${selectedAudience.toLowerCase()}. Explore comprehensive solutions to transform your organization.`;
} else if (!isAllCategories && selectedCategory) {
  // Only category selected: "Networking Programs"
  const categoryName = selectedCategory[`name_${lang}` as keyof Category] || selectedCategory.name_en;
  // Check if category name already ends with "Program" or "Programs"
  const categoryNameLower = categoryName.toLowerCase();
  if (categoryNameLower.includes('program')) {
    pageTitle = categoryName;
  } else {
    pageTitle = `${categoryName} Programs`;
  }
  pageDescription = `Discover ${categoryName.toLowerCase()} programs designed to transform your organization. Explore comprehensive solutions and strategies.`;
} else if (!isAllAudiences && selectedAudience) {
  // Only audience selected: "Programs For Community Members"
  pageTitle = `Programs For ${selectedAudience}`;
  pageDescription = `Discover programs designed for ${selectedAudience.toLowerCase()}. Explore comprehensive solutions to transform your organization.`;
}
---
<PageLayout
  title={pageTitle}
  description={pageDescription}
  lang={lang}
>
  <div class="container py-12">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{pageTitle}</h1>
      <p class="text-xl text-black">{pageDescription}</p>
    </div>

    <!-- Filters Section -->
    <div class="mb-8">
      <div class="flex flex-wrap gap-4 items-center">
        <!-- Category Dropdown -->
        <div class="flex-1 min-w-[200px] relative">
          <select
            id="category-filter"
            class="w-full px-4 py-2.5 bg-white border border-gray-300 rounded-full focus:ring-2 focus:ring-primary focus:border-transparent appearance-none cursor-pointer pr-12"
            style="background-image: url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 width=%2712%27 height=%2712%27 viewBox=%270 0 12 12%27%3E%3Cpath fill=%27%23333%27 d=%27M6 9L1 4h10z%27/%3E%3C/svg%3E'); background-repeat: no-repeat; background-position: right 1rem center;"
          >
            <option value="all-categories" selected={isAllCategories}>{t.programs.allPrograms || 'All Programs'}</option>
            {categories.map((category) => {
              const categoryName = category[`name_${lang}` as keyof Category] || category.name_en;
              const categorySlugValue = category.slug;
              const isSelected = !isAllCategories && selectedCategory?.id === category.id;
              return (
                <option value={categorySlugValue} selected={isSelected}>
                  {categoryName}
                </option>
              );
            })}
          </select>
        </div>

        <!-- Audience Dropdown -->
        <div class="flex-1 min-w-[200px] relative">
          <select
            id="audience-filter"
            class="w-full px-4 py-2.5 bg-white border border-gray-300 rounded-full focus:ring-2 focus:ring-primary focus:border-transparent appearance-none cursor-pointer pr-12"
            style="background-image: url('data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 width=%2712%27 height=%2712%27 viewBox=%270 0 12 12%27%3E%3Cpath fill=%27%23333%27 d=%27M6 9L1 4h10z%27/%3E%3C/svg%3E'); background-repeat: no-repeat; background-position: right 1rem center;"
          >
            <option value="all-audiences" selected={isAllAudiences}>{t.programs.allAudiences || 'All Audiences'}</option>
            {uniqueAudiences.map((audience) => {
              const audienceSlugValue = slugify(audience);
              const isSelected = !isAllAudiences && selectedAudience === audience;
              return (
                <option value={audienceSlugValue} selected={isSelected}>
                  {audience}
                </option>
              );
            })}
          </select>
        </div>

        <!-- Goal Search Filter -->
        <div class="flex-1 min-w-[250px] relative">
          <input
            type="text"
            id="goal-search"
            placeholder={t.programs.searchGoalPlaceholder || 'Type to search program goals...'}
            value={goalFilter}
            class="w-full px-4 py-2.5 pr-10 border border-gray-300 rounded-full focus:ring-2 focus:ring-primary focus:border-transparent bg-white"
          />
          {goalFilter && (
            <button
              id="clear-goal"
              type="button"
              class="absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 flex items-center justify-center text-gray-400 hover:text-gray-600 transition-colors z-10"
              aria-label="Clear goal search"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="11" y1="3" x2="3" y2="11"></line>
                <line x1="3" y1="3" x2="11" y2="11"></line>
              </svg>
            </button>
          )}
        </div>
      </div>
    </div>

    <!-- Programs Grid -->
    <div id="programs-container">
      {programs.length > 0 ? (
        <>
          <div class="grid md:grid-cols-3 gap-6" id="programs-grid">
            {programs.map((program) => {
              let programCategory: Category | null = null;
              
              if (program.category) {
                programCategory = categoryMap.get(program.category) || null;
                if (!programCategory) {
                  for (const cat of categories) {
                    if (cat.id === program.category || 
                        cat.slug === program.category || 
                        cat.name_en === program.category ||
                        cat.name_fi === program.category ||
                        cat.name_sv === program.category) {
                      programCategory = cat;
                      break;
                    }
                  }
                }
              }
              
              return (
                <div class="program-item h-full">
                  <ProgramCard program={program} lang={lang} category={programCategory} />
                </div>
              );
            })}
          </div>
          
          <!-- Pagination -->
          {(hasMore || page > 1) && totalCount > 0 && (
            <div class="mt-8 flex justify-center items-center gap-4">
              {page > 1 && prevPageURL && (
                <a
                  href={prevPageURL}
                  class="px-4 py-2 bg-[#F6F7FB] text-black rounded-full hover:opacity-80 transition-colors"
                >
                  ← {t.programs.previous || 'Previous'}
                </a>
              )}
              <span class="text-gray-600">
                {t.programs.page || 'Page'} {page} of {Math.ceil(totalCount / pageSize)}
              </span>
              {hasMore && nextPageURL && (
                <a
                  href={nextPageURL}
                  class="px-4 py-2 bg-[#2841CF] text-white rounded-full hover:opacity-90 transition-colors"
                >
                  {t.programs.next || 'Next'} →
                </a>
              )}
            </div>
          )}
        </>
      ) : (
        <div id="no-results" class="text-center text-gray-500 py-12">
          {t.programs.noPrograms}
        </div>
      )}
    </div>
  </div>
</PageLayout>

<script is:inline>
  (function() {
    const categoryFilter = document.getElementById('category-filter');
    const audienceFilter = document.getElementById('audience-filter');
    const goalSearch = document.getElementById('goal-search');
    const clearGoal = document.getElementById('clear-goal');

    function updateURL() {
      const category = categoryFilter?.value || 'all-categories';
      const audience = audienceFilter?.value || 'all-audiences';
      const goal = goalSearch?.value.trim() || '';
      
      // Reset to page 1 when filters change
      let newURL = `/programs/${category}/${audience}`;
      const params = new URLSearchParams();
      if (goal) {
        params.set('goal', goal);
      }
      // Always reset to page 1 when filters change
      const queryString = params.toString();
      if (queryString) {
        newURL += `?${queryString}`;
      }
      window.location.href = newURL;
    }

    if (categoryFilter) {
      categoryFilter.addEventListener('change', updateURL);
    }

    if (audienceFilter) {
      audienceFilter.addEventListener('change', updateURL);
    }

    // Goal search input - reload page with filter (debounced)
    if (goalSearch) {
      let searchTimeout;
      goalSearch.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          updateURL();
        }, 500); // Debounce 500ms for search
      });
    }

    // Clear goal button
    if (clearGoal) {
      clearGoal.addEventListener('click', function(e) {
        e.stopPropagation();
        e.preventDefault();
        if (goalSearch) {
          goalSearch.value = '';
          updateURL();
        }
      });
    }
  })();
</script>

