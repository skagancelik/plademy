---
import PageLayout from '@layouts/PageLayout.astro';
import ResourceCard from '@components/resources/ResourceCard.astro';
import { supabase, type Resource, type Category } from '@lib/supabase';
import { getTranslations, type Language, getLanguageFromCookie } from '@lib/i18n';

export const prerender = false; // Edge SSR

// Set cache headers for Edge SSR (list pages: 5 min)
Astro.response.headers.set(
  'Cache-Control',
  'public, max-age=300, stale-while-revalidate=600'
);

const lang = getLanguageFromCookie(Astro.cookies, Astro.url) || 'en';
const t = getTranslations(lang);

// Get page from URL query parameter
const page = parseInt(Astro.url.searchParams.get('page') || '1', 10);
const pageSize = 20;
const offset = (page - 1) * pageSize;

let resources: Resource[] = [];
let categories: Category[] = [];
let categoryMap: Map<string, Category> = new Map();
let totalCount = 0;
let hasMore = false;

try {
  // Get total count for pagination
  const { count } = await supabase
    .from('resources')
    .select('id', { count: 'exact', head: true })
    .eq('language', lang)
    .eq('is_published', true);

  totalCount = count || 0;
  hasMore = offset + pageSize < totalCount;

  // Fetch resources with pagination and selective fields
  const { data: resourcesData } = await supabase
    .from('resources')
    .select('id, slug, title, excerpt, cover_image_url, category, published_at')
    .eq('language', lang)
    .eq('is_published', true)
    .order('published_at', { ascending: false })
    .range(offset, offset + pageSize - 1);

  const { data: categoriesData } = await supabase
    .from('categories')
    .select('id, slug, name_en, name_fi, name_sv, type, sort_order')
    .eq('type', 'resource')
    .order('sort_order', { ascending: true });

  resources = resourcesData || [];
  categories = categoriesData || [];
  
  // Create category map for quick lookup
  categories.forEach((cat) => {
    categoryMap.set(cat.id, cat);
    categoryMap.set(cat.slug, cat);
    categoryMap.set(cat.name_en, cat);
  });
} catch (error) {
  console.error('Error fetching resources:', error);
}
---

<PageLayout
  title={t.resources.title}
  description={t.resources.description}
  lang={lang}
>
  <div class="container py-12">
    <!-- Header Section: Title/Description (Left 50%) + Filters (Right 50%) -->
    <div class="mb-8 flex flex-col md:flex-row md:items-start gap-6">
      <!-- Left: Title and Description (50%) -->
      <div class="w-full md:w-1/2">
        <h1 class="text-4xl font-bold mb-4">{t.resources.title}</h1>
        <p class="text-xl text-black">{t.resources.description}</p>
      </div>

      <!-- Right: Category Filter Buttons (50%) -->
      {categories.length > 0 && (
        <div class="w-full md:w-1/2 flex justify-end">
          <div class="flex flex-wrap gap-2 justify-end">
            <a
              href="/resources/"
              class="px-4 py-2 bg-[#2841CF] text-white rounded-full hover:bg-black hover:text-white transition-colors"
              data-astro-reload
            >
              {t.resources.allResources}
            </a>
            {categories.map((category) => {
              const categoryName = category[`name_${lang}` as keyof Category] || category.name_en;
              return (
                <a
                  href={`/resources/${category.slug}`}
                  class="px-4 py-2 bg-[#F6F7FB] text-black rounded-full hover:bg-black hover:text-white transition-colors"
                  data-astro-reload
                >
                  {categoryName}
                </a>
              );
            })}
          </div>
        </div>
      )}
    </div>

    {resources.length > 0 ? (
      <>
        <div 
          id="resources-grid" 
          class="grid md:grid-cols-3 gap-6"
        >
          {resources.map((resource) => {
            const resourceCategory = resource.category ? categoryMap.get(resource.category) || null : null;
            return (
              <ResourceCard resource={resource} lang={lang} category={resourceCategory} />
            );
          })}
        </div>
        
        <!-- Pagination -->
        <div class="mt-8 flex justify-center items-center gap-4">
          {page > 1 && (
            <a
              href={`/resources/?page=${page - 1}`}
              class="px-4 py-2 bg-[#F6F7FB] text-black rounded-full hover:opacity-80 transition-colors"
            >
              ← Previous
            </a>
          )}
          <span class="text-gray-600">
            Page {page} {totalCount > 0 && `of ${Math.ceil(totalCount / pageSize)}`}
          </span>
          {hasMore && (
            <a
              href={`/resources/?page=${page + 1}`}
              class="px-4 py-2 bg-[#2841CF] text-white rounded-full hover:opacity-90 transition-colors"
            >
              Next →
            </a>
          )}
        </div>
      </>
    ) : (
      <p class="text-center text-gray-500 py-12">{t.resources.noResources}</p>
    )}
  </div>
</PageLayout>


