---
import PageLayout from '@layouts/PageLayout.astro';
import ProgramCard from '@components/programs/ProgramCard.astro';
import { supabase, type Program, type Category } from '@lib/supabase';
import { getTranslations, getLanguageFromCookie } from '@lib/i18n';

export const prerender = false; // Edge SSR

// Set cache headers for Edge SSR (list pages: 5 min)
Astro.response.headers.set(
  'Cache-Control',
  'public, max-age=300, stale-while-revalidate=600'
);

const lang = 'fi'; // Force Finnish
const t = getTranslations(lang);

// Get page from URL query parameter
const page = parseInt(Astro.url.searchParams.get('page') || '1', 10);
const pageSize = 20;
const offset = (page - 1) * pageSize;

let programs: Program[] = [];
let categories: Category[] = [];
let totalCount = 0;
let hasMore = false;

try {
  // Get total count for pagination
  const { count } = await supabase
    .from('programs')
    .select('id', { count: 'exact', head: true })
    .eq('language', lang)
    .eq('is_published', true);

  totalCount = count || 0;
  hasMore = offset + pageSize < totalCount;

  // Fetch programs with pagination and selective fields
  const { data: programsData } = await supabase
    .from('programs')
    .select('id, slug, title, excerpt, cover_image_url, category, published_at, goal, duration, audience')
    .eq('language', lang)
    .eq('is_published', true)
    .order('published_at', { ascending: false })
    .range(offset, offset + pageSize - 1);

  const { data: categoriesData } = await supabase
    .from('categories')
    .select('id, slug, name_en, name_fi, name_sv, type, sort_order')
    .eq('type', 'program')
    .order('sort_order', { ascending: true });

  programs = programsData || [];
  categories = categoriesData || [];
} catch (error) {
  console.error('Error fetching programs:', error);
}
---

<PageLayout
  title={t.programs.title}
  description={t.programs.description}
  lang={lang}
>
  <div class="container py-12">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{t.programs.title}</h1>
      <p class="text-xl text-black">{t.programs.description}</p>
    </div>

    {categories.length > 0 && (
      <div class="mb-8">
        <h2 class="text-2xl font-bold mb-4">{t.programs.categories}</h2>
        <div class="flex flex-wrap gap-2">
          <a
            href="/ohjelmat/"
            class="px-4 py-2 bg-[#2841CF] text-white rounded-lg hover:opacity-90"
          >
            {t.programs.allPrograms}
          </a>
          {categories.map((category) => {
            const categoryName = category[`name_${lang}` as keyof Category] || category.name_en;
            return (
              <a
                href={`/ohjelmat/${category.slug}`}
                class="px-4 py-2 bg-[#F6F7FB] text-black rounded-lg hover:opacity-80"
              >
                {categoryName}
              </a>
            );
          })}
        </div>
      </div>
    )}

    {programs.length > 0 ? (
      <>
        <div class="grid md:grid-cols-3 gap-6">
          {programs.map((program) => (
            <ProgramCard program={program} lang={lang} />
          ))}
        </div>
        
        <!-- Pagination -->
        <div class="mt-8 flex justify-center items-center gap-4">
          {page > 1 && (
            <a
              href={`/ohjelmat/?page=${page - 1}`}
              class="px-4 py-2 bg-[#F6F7FB] text-black rounded-full hover:opacity-80 transition-colors"
            >
              ← Previous
            </a>
          )}
          <span class="text-gray-600">
            Page {page} {totalCount > 0 && `of ${Math.ceil(totalCount / pageSize)}`}
          </span>
          {hasMore && (
            <a
              href={`/ohjelmat/?page=${page + 1}`}
              class="px-4 py-2 bg-[#2841CF] text-white rounded-full hover:opacity-90 transition-colors"
            >
              Next →
            </a>
          )}
        </div>
      </>
    ) : (
      <p class="text-center text-gray-500 py-12">{t.programs.noPrograms}</p>
    )}
  </div>
</PageLayout>

