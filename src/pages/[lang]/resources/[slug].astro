---
import ContentLayout from '@layouts/ContentLayout.astro';
import { supabase, type Resource } from '@lib/supabase';
import { getTranslations, type Language } from '@lib/i18n';

export const prerender = false; // Edge SSR

const lang = Astro.params.lang as Language || 'en';
const slug = Astro.params.slug || '';
const t = getTranslations(lang);

let resource: Resource | null = null;

try {
  const { data } = await supabase
    .from('resources')
    .select('*')
    .eq('slug', slug)
    .eq('language', lang)
    .eq('is_published', true)
    .single();

  resource = data;
} catch (error) {
  console.error('Error fetching resource:', error);
}

if (!resource) {
  return Astro.redirect(`/${lang}/resources/`, 404);
}

const canonical = `https://plademy.com/${lang}/resources/${slug}`;
---

<ContentLayout
  title={resource.title}
  description={resource.description || resource.excerpt || undefined}
  image={resource.cover_image_url || undefined}
  lang={lang}
  publishedTime={resource.published_at}
  canonical={canonical}
>
  {resource.cover_image_url && (
    <img
      src={resource.cover_image_url}
      alt={resource.title}
      class="w-full h-96 object-cover rounded-lg mb-8"
      loading="eager"
    />
  )}

  {resource.keypoints && resource.keypoints.length > 0 && (
    <div class="bg-blue-50 border-l-4 border-primary p-6 mb-8">
      <h2 class="text-2xl font-bold mb-4">Key Points</h2>
      <ul class="space-y-2">
        {resource.keypoints.map((point) => (
          <li class="flex items-start">
            <span class="text-primary mr-2">✓</span>
            <span>{point}</span>
          </li>
        ))}
      </ul>
    </div>
  )}

  {resource.content && (
    <div set:html={resource.content} />
  )}

  {resource.faqs && resource.faqs.length > 0 && (
    <div class="mt-12">
      <h2 class="text-3xl font-bold mb-6">Frequently Asked Questions</h2>
      <div class="space-y-4">
        {resource.faqs.map((faq: any) => (
          <div class="card">
            <h3 class="text-xl font-bold mb-2">{faq.question}</h3>
            <p class="text-gray-600">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  )}

  <div class="mt-8 pt-8 border-t">
    <a href={`/${lang}/resources/`} class="text-primary hover:underline">
      ← {t.common.back} to Resources
    </a>
  </div>
</ContentLayout>

