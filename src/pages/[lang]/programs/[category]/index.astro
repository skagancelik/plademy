---
import PageLayout from '@layouts/PageLayout.astro';
import ProgramCard from '@components/programs/ProgramCard.astro';
import { supabase, type Program, type Category } from '@lib/supabase';
import { getTranslations, type Language } from '@lib/i18n';

export const prerender = false; // Edge SSR

const lang = Astro.params.lang as Language || 'en';
const categorySlug = Astro.params.category || '';
const t = getTranslations(lang);

let programs: Program[] = [];
let category: Category | null = null;
let categories: Category[] = [];

try {
  // Get category info
  const { data: categoryData } = await supabase
    .from('categories')
    .select('*')
    .eq('type', 'program')
    .eq('slug', categorySlug)
    .single();

  category = categoryData;

  if (category) {
    // Get programs for this category
    const { data: programsData } = await supabase
      .from('programs')
      .select('*')
      .eq('language', lang)
      .eq('category', category.id)
      .eq('is_published', true)
      .order('published_at', { ascending: false })
      .limit(20);

    programs = programsData || [];
  }

  // Get all categories for navigation
  const { data: categoriesData } = await supabase
    .from('categories')
    .select('*')
    .eq('type', 'program')
    .order('sort_order', { ascending: true });

  categories = categoriesData || [];
} catch (error) {
  console.error('Error fetching category programs:', error);
}

if (!category) {
  return Astro.redirect(`/${lang}/programs/`, 404);
}

const categoryName = category[`name_${lang}` as keyof Category] || category.name_en;
const categoryDescription = (category[`description_${lang}` as keyof Category] || category.description_en) as string | undefined;
---

<PageLayout
  title={`${categoryName} - ${t.programs.title}`}
  description={categoryDescription || t.programs.description}
  lang={lang}
>
  <div class="container py-12">
    <div class="mb-8">
      <a href={`/${lang}/programs/`} class="text-primary hover:underline mb-4 inline-block">
        ‚Üê {t.common.back}
      </a>
      <h1 class="text-4xl font-bold mb-4">{categoryName}</h1>
      {categoryDescription && (
        <p class="text-xl text-gray-600">{categoryDescription}</p>
      )}
    </div>

    {categories.length > 0 && (
      <div class="mb-8">
        <div class="flex flex-wrap gap-2">
          <a
            href={`/${lang}/programs/`}
            class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200"
          >
            {t.programs.allPrograms}
          </a>
          {categories.map((cat) => {
            const catName = cat[`name_${lang}` as keyof Category] || cat.name_en;
            const isActive = cat.id === category!.id;
            return (
              <a
                href={`/${lang}/programs/${cat.slug}`}
                class={`px-4 py-2 rounded-lg ${
                  isActive
                    ? 'bg-primary text-white'
                    : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                }`}
              >
                {catName}
              </a>
            );
          })}
        </div>
      </div>
    )}

    {programs.length > 0 ? (
      <div class="grid md:grid-cols-3 gap-6">
        {programs.map((program) => (
          <ProgramCard program={program} lang={lang} />
        ))}
      </div>
    ) : (
      <p class="text-center text-gray-500 py-12">{t.programs.noPrograms}</p>
    )}
  </div>
</PageLayout>

