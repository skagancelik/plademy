---
import SEO from '../components/common/SEO.astro';
import type { Language } from '@lib/i18n';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  lang: Language;
  canonical?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

const {
  title,
  description,
  image,
  type,
  lang,
  canonical,
  publishedTime,
  modifiedTime,
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <!-- Google Tag Manager -->
    <script is:inline>
      (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
      new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
      j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
      'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
      })(window,document,'script','dataLayer','GTM-NDBXXZV');
    </script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />
    <meta name="format-detection" content="telephone=no" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <link rel="icon" type="image/svg+xml" href="/plademy-favicon.svg" />
    <link rel="apple-touch-icon" href="/plademy-favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    <SEO
      title={title}
      description={description}
      image={image}
      type={type}
      lang={lang}
      canonical={canonical}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
    />
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NDBXXZV"
      height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
</style>

