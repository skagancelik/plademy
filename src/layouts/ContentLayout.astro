---
import PageLayout from './PageLayout.astro';
import type { Language } from '@lib/i18n';
import { formatDate } from '@lib/utils';
import type { Resource, Program } from '@lib/supabase';

interface Props {
  title: string;
  description?: string;
  image?: string;
  lang: Language;
  publishedTime?: string;
  modifiedTime?: string;
  canonical?: string;
  category?: { name: string; slug: string };
  tableOfContents?: Array<{ id: string; text: string }>;
  relatedResources?: Resource[];
  relatedResourcesLabel?: string;
  relatedPrograms?: Program[];
  relatedProgramsLabel?: string;
  programGoal?: string;
  programDuration?: string;
  programAudience?: string;
}

const {
  title,
  description,
  image,
  lang,
  publishedTime,
  modifiedTime,
  canonical,
  category,
  tableOfContents = [],
  relatedResources = [],
  relatedResourcesLabel,
  relatedPrograms = [],
  relatedProgramsLabel,
  programGoal,
  programDuration,
  programAudience,
} = Astro.props;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://plademy.com';
const canonicalUrl = canonical || Astro.url.href;
// Ensure ogImage is always an absolute URL
// If image is empty/undefined, use default logo
const defaultImage = `${siteUrl}/plademy-white-logo.svg`;
const ogImage = !image || image.trim() === '' 
  ? defaultImage 
  : image.startsWith('http') || image.startsWith('https')
  ? image 
  : image.startsWith('/')
  ? `${siteUrl}${image}`
  : `${siteUrl}/${image}`;

// Build breadcrumb list
const breadcrumbs = [
  { name: 'Home', url: siteUrl },
];
if (category) {
  breadcrumbs.push({
    name: category.name,
    url: `${siteUrl}/${category.slug.includes('resource') ? 'resources' : 'programs'}/${category.slug}`,
  });
}
breadcrumbs.push({ name: title, url: canonicalUrl });
---

<PageLayout
  title={title}
  description={description}
  image={image}
  type="article"
  lang={lang}
  canonical={canonical}
  publishedTime={publishedTime}
  modifiedTime={modifiedTime}
>
  <article class="container py-12 overflow-x-hidden">
    <div class="flex flex-col lg:flex-row gap-8 justify-between">
      <div class={`${tableOfContents.length > 0 || relatedResources.length > 0 || relatedPrograms.length > 0 || programGoal || programDuration || programAudience ? 'max-w-[800px]' : 'max-w-[800px] mx-auto'} flex-1 w-full`}>
        <header class="mb-8">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>
          {description && <p class="text-xl text-black mb-4">{description}</p>}
          <slot name="after-description" />
        </header>
        <slot name="before-content">
          <!-- Default content if slot is not provided -->
        </slot>
        <div class="prose prose-lg max-w-none content-prose">
          <slot />
        </div>
        <slot name="after-content">
          <!-- Default content if slot is not provided -->
        </slot>
      </div>
      {(tableOfContents.length > 0 || relatedResources.length > 0 || relatedPrograms.length > 0 || programGoal || programDuration || programAudience) && (
        <aside class="hidden lg:block w-64 flex-shrink-0">
          {(programGoal || programDuration || programAudience) && (
            <div class="mb-8 space-y-4">
              {programGoal && (
                <div class="bg-green-50 rounded-3xl p-6">
                  <div class="flex items-center gap-3">
                    <svg
                      class="w-8 h-8 text-green-600 flex-shrink-0"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    <div>
                      <h2 class="text-xl font-bold mb-2">Program Goal</h2>
                      <p class="text-base">{programGoal}</p>
                    </div>
                  </div>
                </div>
              )}
              {programDuration && (
                <div class="bg-purple-50 rounded-3xl p-6">
                  <div class="flex items-center gap-3">
                    <svg
                      class="w-8 h-8 text-purple-600 flex-shrink-0"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    <div>
                      <h2 class="text-xl font-bold mb-2">Program Duration</h2>
                      <p class="text-base">{programDuration}</p>
                    </div>
                  </div>
                </div>
              )}
              {programAudience && (
                <div class="bg-yellow-50 rounded-3xl p-6">
                  <div class="flex items-center gap-3">
                    <svg
                      class="w-8 h-8 text-yellow-600 flex-shrink-0"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                      />
                    </svg>
                    <div>
                      <h2 class="text-xl font-bold mb-2">Target Audience</h2>
                      <p class="text-base">{programAudience}</p>
                    </div>
                  </div>
                </div>
              )}
            </div>
          )}
          {tableOfContents.length > 0 && (
            <nav class="mb-8 bg-[#F6F7FB] rounded-3xl p-6">
              <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">Contents</h2>
              <ul class="space-y-2">
                {tableOfContents.map((item) => (
                  <li>
                    <a
                      href={`#${item.id}`}
                      class="block text-sm text-gray-600 hover:text-primary transition-colors toc-link"
                      data-toc-id={item.id}
                    >
                      {item.text}
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          )}
          {relatedResources.length > 0 && (
            <div>
              <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">
                {relatedResourcesLabel || 'Related Articles'}
              </h2>
              <div class="space-y-4">
                {relatedResources.map((relatedResource) => (
                  <a href={`/${relatedResource.slug}`} class="card block transition-opacity hover:opacity-80">
                    <h3 class="text-base font-semibold mb-2">{relatedResource.title}</h3>
                    {relatedResource.cover_image_url && (
                      <img
                        src={relatedResource.cover_image_url}
                        alt={relatedResource.title}
                        class="w-full h-24 object-cover rounded-lg"
                        loading="lazy"
                      />
                    )}
                  </a>
                ))}
              </div>
            </div>
          )}
          {relatedPrograms.length > 0 && (
            <div>
              <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">
                {relatedProgramsLabel || 'Related Programs'}
              </h2>
              <div class="space-y-4">
                {relatedPrograms.map((relatedProgram) => (
                  <a href={`/programs/${relatedProgram.slug}`} class="card block transition-opacity hover:opacity-80">
                    <h3 class="text-base font-semibold mb-2">{relatedProgram.title}</h3>
                    {relatedProgram.cover_image_url && (
                      <img
                        src={relatedProgram.cover_image_url}
                        alt={relatedProgram.title}
                        class="w-full h-24 object-cover rounded-lg"
                        loading="lazy"
                      />
                    )}
                  </a>
                ))}
              </div>
            </div>
          )}
        </aside>
      )}
    </div>
    
    <!-- Mobile: Show related programs at bottom -->
    {relatedPrograms.length > 0 && (
      <div class="lg:hidden mt-12 pt-8 border-t">
        <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">
          {relatedProgramsLabel || 'Related Programs'}
        </h2>
        <div class="space-y-4">
          {relatedPrograms.map((relatedProgram) => (
            <a href={`/programs/${relatedProgram.slug}`} class="card block transition-opacity hover:opacity-80">
              <h3 class="text-base font-semibold mb-2">{relatedProgram.title}</h3>
              {relatedProgram.cover_image_url && (
                <img
                  src={relatedProgram.cover_image_url}
                  alt={relatedProgram.title}
                  class="w-full h-24 object-cover rounded-lg"
                  loading="lazy"
                />
              )}
            </a>
          ))}
        </div>
      </div>
    )}
  </article>
  
  {tableOfContents.length > 0 && (
    <script>
      // Highlight active TOC item on scroll
      const tocLinks = document.querySelectorAll('.toc-link');
      const headings = Array.from(document.querySelectorAll('h3[id]'));
      
      function updateActiveTOC() {
        const scrollPosition = window.scrollY + 100;
        
        let activeId = '';
        for (let i = headings.length - 1; i >= 0; i--) {
          const heading = headings[i] as HTMLElement;
          if (heading.offsetTop <= scrollPosition) {
            activeId = heading.id;
            break;
          }
        }
        
        // Also check FAQ section
        const faqSection = document.getElementById('frequently-asked-questions');
        if (faqSection && faqSection.offsetTop <= scrollPosition) {
          activeId = 'frequently-asked-questions';
        }
        
        tocLinks.forEach((link) => {
          const linkEl = link as HTMLElement;
          if (linkEl.dataset.tocId === activeId) {
            linkEl.classList.add('text-primary', 'font-semibold');
            linkEl.classList.remove('text-gray-600');
          } else {
            linkEl.classList.remove('text-primary', 'font-semibold');
            linkEl.classList.add('text-gray-600');
          }
        });
      }
      
      window.addEventListener('scroll', updateActiveTOC);
      updateActiveTOC();
    </script>
  )}

  <!-- Article/Program Specific JSON-LD Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": title,
    "description": description || title,
    "image": ogImage,
    "url": canonicalUrl,
    "datePublished": publishedTime || new Date().toISOString(),
    "dateModified": modifiedTime || publishedTime || new Date().toISOString(),
    "author": {
      "@type": "Organization",
      "name": "Plademy",
      "url": siteUrl
    },
    "publisher": {
      "@type": "Organization",
      "name": "Plademy",
      "url": siteUrl,
      "logo": {
        "@type": "ImageObject",
        "url": `${siteUrl}/plademy-white-logo.svg`
      }
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": canonicalUrl
    },
    "inLanguage": lang,
    ...(category ? {
      "articleSection": category.name,
      "keywords": category.name
    } : {}),
    ...(programGoal || programDuration || programAudience ? {
      "about": {
        "@type": "Thing",
        "name": programGoal || programDuration || programAudience
      }
    } : {})
  })} />

  <!-- BreadcrumbList Schema -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": breadcrumbs.map((crumb, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "name": crumb.name,
      "item": crumb.url
    }))
  })} />
</PageLayout>

